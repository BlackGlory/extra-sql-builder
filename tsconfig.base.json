{
  "compilerOptions": {
    "target": "ES2018"
  , "module": "CommonJS"
  , "strict": true
  , "esModuleInterop": true
  , "noUnusedLocals": false
  , "noUnusedParameters": false
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@values/*": ["src/values/*"]
    , "@fragments/*": ["src/fragments/*"]
    , "@utils": ["src/utils"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
